{
	"name": "retinanet",
	"build": {
		"dockerfile": "../Dockerfile"
	},
	"settings": {
		"python.pythonPath": "/usr/local/bin/python",
		"python.languageServer": "Pylance",
		"python.linting.enabled": true,
		"python.formatting.blackPath": "/usr/local/bin/black",
		"python.formatting.provider": "black",
		"editor.formatOnSave": true
	},
	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance"
	],
	"mounts": [
		"source={{ remote_home_directory }}/.ssh,target=/root/.ssh,type=bind,consistency=cached,readonly",
		"source={{ remote_home_directory }}/.aws,target=/root/.aws,type=bind,consistency=cached,readonly",
		"source={{ remote_home_directory }}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached,readonly",
		"source=projectname-bashhistory,target=/commandhistory,type=volume"
	],
	"workspaceMount": "source={{ remote_project_directory }},target=/code,type=bind",
	"workspaceFolder": "/code",
	"runArgs": [
		"--gpus=all"
	],
	"forwardPorts": [
		8888
	]
}